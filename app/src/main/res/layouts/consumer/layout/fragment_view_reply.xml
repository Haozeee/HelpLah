<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/replyReviewScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
    android:background="@drawable/home_background"
    tools:context=".viewmodel.consumer.WriteReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/replyUserNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quicker Locksmith"
            android:layout_marginTop="60dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_weight="5"
            android:fontFamily="@font/roboto_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replied to your review"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_weight="5"
            android:fontFamily="@font/roboto_bold" />

        <TextView
            android:id="@+id/replyReviewUserNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Your Review:" />

        <TextView
            android:id="@+id/replyReviewReviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great locksmith to work with. Would recommend."
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp" />

        <TextView
            android:id="@+id/replyBusinessReviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Quicker Locksmith replied:" />

        <TextView
            android:id="@+id/replyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great locksmith to work with. Would recommend."
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>