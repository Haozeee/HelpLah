<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/greyPrimary</item>
        <item name="android:textColorSecondary">@color/greySecondary</item>
    </style>

    <style name="AppTheme.Background">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.FilterSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ThemeOverlay.FilterButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.FilterIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="AppTheme.FilterCheckBox">
        <item name="android:checked">true</item>
        <item name="font">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="AppTheme.RadioButton">
        <item name="font">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="ListingsLeftTextBox">
        <item name="android:layout_marginStart">120dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="ListingsRightTextBox">
        <item name="layout_constraintHorizontal_bias">0.8</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.bottomNavigation" >
        <item name="fontFamily">@font/sf_display_bold</item>
    </style>

</resources>